{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "lib": ["dom", "es6", "es2017", "esnext"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src/**/*", "vite-env.d.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
